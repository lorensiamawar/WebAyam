@model IEnumerable<WebAyam.Models.Barang>

@{
    ViewBag.Title = "Barang";
}


<h2>Daftar Barang</h2>
<br />
@foreach (var item in Model)
{
    <div class="container col-md-4">
        <div class="row">
            <div>
                <img src="~/Content/Image/@item.gambar" height="150" width="150" /> <br />
            </div>
            
        </div>
        <div class="row">
            <div>
                <a href="/Barang/Details/@item.id_barang"><strong>@item.nama_barang</strong></a><br />
                Satuan : @item.satuan<br />
                Harga  : Rp.@item.harga_jual.ToString("N0")<br />
                Stok   : @item.stok<br />
                <a href="~/ShoppingCarts/AddToCart/@item.id_barang" class="btn btn-success btn-xs">Tambah ke Keranjang</a>
            </div>
            <br />
        </div>
       
    </div>
}
